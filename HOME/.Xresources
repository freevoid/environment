## =============================== xterm ====================================
xterm*background: black
xterm*foreground: white

## =============================== urxvt ====================================

## general options
URxvt.buffered:         true
URxvt*termName: rxvt-unicode

## extensions
URxvt.perl-ext-common:  default,tabbed,clipboard,matcher
URxvt.urlLauncher:      /usr/bin/opera
URxvt.matcher.button: 1
URxvt.scrollBar: false

## borderless and no scrollbar
##URxvt*scrollBar_right: false
##URxvt*scrollBar: false
URxvt*borderLess: false

## geometry and font
URxvt.font:             xft:Terminus:pixelsize=14:antialias=false
URxvt.boldFont:         xft:Terminus:bold:pixelsize=14:antialias=false
!URxvt*geometry: 84Ã—24

## pseudo-transparency stuff
URxvt*inheritPixmap: true
URxvt*tintColor: white
URxvt*shading: 20

## colors stuff

! buggy almost everywhere
!URxvt.depth: 32
!URxvt.background: rgba:0000/0000/0000/dddd


